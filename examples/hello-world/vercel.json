{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": ".rigidity" }
    },
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/assets/:match*",
      "destination": "/client/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/server/index.js"
    }
  ]
}